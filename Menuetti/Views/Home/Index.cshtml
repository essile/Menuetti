@{
    ViewData["Title"] = "Menuetti";
}

<div class="row">
    <div class="col-sm-12">
        <center>
            <img src="~/images/menuetti.png" alt="Menuetti logo" class="img-responsive" align="middle" />
        </center>
    </div>
    <div class="col-lg-12">
        <h2 align="center">Valitse ruokavaliosi</h2>
    </div>
    <div class="col-lg-4">
        <a asp-controller="DietType" asp-action="RecipeCarousel" button class="btn btn-default btn-lg btn-block">
            <img src="~/images/meat.png" alt="Meat" />
            <img src="~/images/fish.png" alt="Fish" /> <span class="btntext">Seka</span> <span class="glyphicon glyphicon-menu-right" style="position: absolute; right: 10%; top: 40%; padding-left: 10px;"></span>
        </a>
    </div>
    <br />
    <div class="col-lg-4">
        <a asp-controller="DietType" asp-action="Vegetarian" button class="btn btn-default btn-lg btn-block">
            <img src="~/images/cheese.png" alt="Cheese" />
            <img src="~/images/vegetarian.png" alt="VegDish" /> <span class="btntext">Kasvis</span> <span class="glyphicon glyphicon-menu-right" style="position: absolute; right: 10%; top: 40%; padding-left: 10px;"></span>
        </a>
    </div>
    <br />
    <div class="col-lg-4">
        <a asp-controller="DietType" asp-action="Vegan" button class="btn btn-default btn-lg btn-block">
            <img src="~/images/vegan.png" alt="Vegan" />
            <img src="~/images/soybean.png" alt="Soybean" /> <span class="btntext">Vegaani</span> <span class="glyphicon glyphicon-menu-right" style="position: absolute; right: 10%; top: 40%; padding-left: 10px;"></span>
        </a>
    </div>
</div>
