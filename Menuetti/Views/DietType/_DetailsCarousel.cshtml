@model Recipes


<div class="DetCarousel" id="recipe-@Model.RecipeId" style="display:none">
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Annoksia
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Portions)
            </dd>
            <dt>
                Ruokavalio
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DietType)
            </dd>
        </dl>
    </div>
    <hr />
    <h4>Reseptin raaka-aineet</h4>
    @*@Model.Ingredients.Count //Katso näitä, älä jätä ikuisiksi ajoiksi tänne roikkumaan

        @ViewBag.CarouselIngredients //Katso näitä, älä jätä ikuisiksi ajoiksi tänne roikkumaan*@

    @foreach (var item in Model.Ingredients)
    {
        <p>
            @item.AmountG @item.RecipeUnit @item.IngredientName
        </p>
    }
    <hr />
    <dt>
        Ohjeet
    </dt>
    <dd class="multiline">
        @Html.DisplayFor(model => model.Instructions)
    </dd>
    <hr />
</div>
