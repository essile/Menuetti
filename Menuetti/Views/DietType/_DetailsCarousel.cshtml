        <hr />
        <dl class="dl-horizontal">
            <dt>
                @*@Html.DisplayNameFor(model => model.RecipeName)*@
                Reseptin nimi
            </dt>
            <dd>
                @Html.DisplayFor(model => model.RecipeName)
            </dd>
            @*<dt>
                    Html.DisplayNameFor(model => model.User)
                    Lisääjä
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.User.UserId)
                </dd>*@
            <dt>
                @*@Html.DisplayNameFor(model => model.Portions)*@
                Annoksia
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Portions)
            </dd>
