@model List<int>
@{
    ViewData["Title"] = "Omni";
}

<div id="myCarousel1" class="carousel slide" style="height:100%" data-ride="carousel" data-interval="false">
    <div class="carousel-inner" @*role="listbox" *@>
        <div class="item active" style="height: 100px; text-align:center">
            <p>
                <a class="btn btn-link" href="http://localhost:62500/Recipes/Details/8">
                    dippadappa
                </a>
            </p>
        </div>

        @foreach (var item in Model)
        {
            <div class="item" style="height: 100px; text-align:center">
                <p>
                    <a class="btn btn-link" href="http://localhost:62500/Recipes/Details/@item">
                        Resepti nro: @item Otsikko: @Html.RenderPartialAsync("_RecipeName", item.ToString())
                    </a>
                </p>
            </div>
        }


        <div class="item" style="height: 100px; text-align:center">
            <p>
                <a class="btn btn-link" href="http://localhost:62500/Recipes/Details/3">
 
                </a>
            </p>
        </div>
        <div class="item" style="height: 100px; text-align:center">
            <a class="btn btn-link" href="http://localhost:62500/Recipes/Details/9">
                Testi
            </a>
            </p>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel1" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel1" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>






