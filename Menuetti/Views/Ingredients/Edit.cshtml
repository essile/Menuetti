@model Menuetti.Models.Ingredients

@{
    ViewData["Title"] = "Edit";
}

<h2>Muokkaa raaka-ainetta</h2>

@*<h4>Ingredients</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IngredientId" />
            <div class="form-group">
                <label asp-for="RecipeId" class="control-label">Reseptin ID</label>
                <input readonly asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"/>
                <span asp-validation-for="RecipeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredientName" class="control-label">Raaka-aine</label>
                <select asp-for="IngredientName" class="form-control" asp-items="@ViewBag.Json"></select>
            </div>
            <div class="form-group">
                <label asp-for="AmountG" class="control-label">Määrä</label>
                <input asp-for="AmountG" class="form-control" />
                <span asp-validation-for="AmountG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeUnit" class="control-label">Yksikkö</label>
                <input asp-for="RecipeUnit" class="form-control" />
                <span asp-validation-for="RecipeUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Päivitä" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Palaa takaisin</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
