@model Menuetti.Models.Ingredients

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Ingredients</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IngredientId" />
            <div class="form-group">
                <label asp-for="RecipeId" class="control-label"></label>
                <select asp-for="RecipeId" class="form-control" asp-items="ViewBag.RecipeId"></select>
                <span asp-validation-for="RecipeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IngredientName" class="control-label"></label>
                <input asp-for="IngredientName" class="form-control" />
                <span asp-validation-for="IngredientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountG" class="control-label"></label>
                <input asp-for="AmountG" class="form-control" />
                <span asp-validation-for="AmountG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeUnit" class="control-label"></label>
                <input asp-for="RecipeUnit" class="form-control" />
                <span asp-validation-for="RecipeUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
