@model IEnumerable<Menuetti.Models.Recipes>

@{
    ViewData["Title"] = "Index";
}

<h2>Reseptit</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Recipes" asp-action="Create" button class="btn btn-default btn-md btn">Luo uusi resepti</a> <a asp-controller="Recipes" asp-action="UserRecipes" button class="btn btn-default btn-md btn">Näytä omat reseptit</a>
    }
    else
    {
    }
</p>
<table class="table">
    <thead @*style="position: fixed; width: 100%"*@ >
        <tr>
            <th>
                Reseptin nimi
            </th>
            <th>
                Valmistusaika (min)
            </th>
            <th>
                Ruokavalio
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr><td></td></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RecipeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DietType)
                </td>
                <td >
                    <a asp-action="Details" asp-route-id="@item.RecipeId" class="btn btn-default" style="margin-right: 6px">Tiedot</a>
                    @if (item.User != null && ViewBag.UserId == item.User.UserId)
                    {
                        <a asp-action="Edit" asp-route-id="@item.RecipeId" class="btn btn-default" style="margin-right: 6px">Muokkaa</a>
                        <a asp-action="Delete" asp-route-id="@item.RecipeId" class="btn btn-default">Poista </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
